@model dynamic
@section style {
    <link rel="stylesheet" href="~/web/assets/css/services.css">
    <link rel="stylesheet" href="~/web/assets/css/responseServices.css">
}
<header class="vh-110 d-flex justify-content-center align-items-center">
    <div class="text-center">
        <h1 class="text-white wow bounceInUp" data-wow-duration="3s" data-wow-offset="150">SERVICES</h1>
        <a href="index.html">HOME</a>
        <a class="menu-link">SERVICES</a>
    </div>
</header>
<section class="services py-5">
    <div class="container text-center py-5 wow bounceInUp" data-wow-duration="1s" data-wow-offset="150">
        <h2 class="pt-5">OUR SERVICES</h2>
        <p>
            Far far away, behind the word mountains, far from the countries Vokalia and
            <br>Consonantia, there live the blind texts.
        </p>
    </div>
    <div class="row align-items-center content-0 justify-content-center py-5 wow bounceInUp" data-wow-duration="1s" data-wow-offset="150">
        @foreach (var item in Model.service)
        {
            <div class="col-md-3  text-center pizza-sec ">
                <div class="position-relative ">
                    <div class="customer-icon0 position-relative position-absolute">
                        <img src="~/files/img/@item.ImgName" alt="pizza" />
                    </div>
                    <div class="icon-content0 position-relative mb-3 "></div>
                </div>
                <h3 class="pt-4">@item.Name</h3>
                <p class="pt-4">
                    @item.Description
                </p>
            </div>
        }
    </div>

</section>
<section class="hot-meals text-center py-5 wow bounceInUp" data-wow-duration="2s" data-wow-offset="150">
    <div class="container py-5">
        <h2 class="text-white">HOT MEALS</h2>
        <p class="line p-3">
            <span class="deg1"></span>
            <span class="deg2"></span>
            <span class="deg3"></span>
        </p>
        <p class="pb-5">Far far away, behind the word mountains, far from the countries Vokalia and<br> Consonantia, there live the blind texts.</p>
        <div class="row justify-content-center py-5 wow bounceInUp" data-wow-duration="2s" data-wow-offset="150">
              @for (int i = 0; i < 4; i++)
        {
            var item = Model.pizza8[i];
            <div class="col-md-3">
                    <div class="type-1 rounded0 ms-5" style="background-image: url('/files/img/@item.ImgName')">
                </div>
                <h3 class="pt-4"><a href="#">@item.Name</a></h3>
                <p>@item.Description</p>
                <span>@item.Price $</span>
                <div class="mt-4">
                    <a href="#" class="button1 btn-add px-3 py-2">Add to card</a>
                </div>
            </div>
          }
        </div>
    </div>
</section>